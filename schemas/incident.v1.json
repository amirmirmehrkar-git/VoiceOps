{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voiceops.ai/schemas/incident.v1.json",
  "title": "VoiceOps Incident",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "source",
    "occurred_at",
    "reported_at",
    "title",
    "category",
    "severity",
    "status",
    "location",
    "systems",
    "summary",
    "confidence"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version for forward compatibility."
    },
    "incident_id": {
      "type": "string",
      "description": "Server-generated stable id (UUID recommended).",
      "pattern": "^[a-f0-9\\-]{16,64}$"
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["channel", "vendor"],
      "properties": {
        "channel": {
          "type": "string",
          "enum": ["voice", "web", "api", "chat"],
          "description": "How the incident was reported."
        },
        "vendor": {
          "type": "string",
          "enum": ["vapi", "manual", "unknown"],
          "description": "Upstream vendor/provider."
        },
        "call_id": {
          "type": "string",
          "description": "Optional call/session id from VAPI (if available).",
          "maxLength": 128
        },
        "recording_url": {
          "type": "string",
          "format": "uri",
          "description": "Optional recording URL (store carefully)."
        }
      }
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the incident happened (ISO-8601)."
    },
    "reported_at": {
      "type": "string",
      "format": "date-time",
      "description": "When it was reported/created."
    },
    "timezone": {
      "type": "string",
      "description": "IANA timezone if known, e.g., Europe/Berlin.",
      "maxLength": 64
    },
    "title": {
      "type": "string",
      "minLength": 8,
      "maxLength": 120,
      "description": "Short headline: what broke."
    },
    "summary": {
      "type": "string",
      "minLength": 20,
      "maxLength": 500,
      "description": "Concise, human-readable summary."
    },
    "description": {
      "type": "string",
      "maxLength": 4000,
      "description": "Optional longer description (what you know so far)."
    },
    "category": {
      "type": "string",
      "enum": [
        "service_outage",
        "performance_degradation",
        "data_issue",
        "security_incident",
        "hardware_failure",
        "patient_safety",
        "process_failure",
        "other"
      ],
      "description": "Primary incident category."
    },
    "severity": {
      "type": "string",
      "enum": ["sev1", "sev2", "sev3", "sev4"],
      "description": "sev1=critical, sev4=minor."
    },
    "status": {
      "type": "string",
      "enum": ["new", "triaged", "mitigating", "resolved"],
      "description": "Current workflow status."
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "required": ["site"],
      "properties": {
        "site": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120,
          "description": "Facility/site name, e.g., 'SPACE Hamburg' or 'Clinic A'."
        },
        "floor": {
          "type": "string",
          "maxLength": 40,
          "description": "Optional floor/zone."
        },
        "room": {
          "type": "string",
          "maxLength": 40,
          "description": "Optional room."
        },
        "address": {
          "type": "string",
          "maxLength": 180,
          "description": "Optional free-text address."
        }
      }
    },
    "systems": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 80,
            "description": "System/app/device affected."
          },
          "component": {
            "type": "string",
            "maxLength": 80,
            "description": "Optional component/subsystem."
          },
          "environment": {
            "type": "string",
            "enum": ["prod", "staging", "dev", "unknown"],
            "description": "Environment if relevant."
          }
        }
      }
    },
    "impact": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "users_affected_estimate": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100000000
        },
        "services_down": {
          "type": "boolean"
        },
        "patient_safety_risk": {
          "type": "boolean",
          "description": "Use only if your domain includes clinical safety."
        },
        "financial_risk_eur_estimate": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "error_codes": {
          "type": "array",
          "maxItems": 20,
          "items": { "type": "string", "maxLength": 64 }
        },
        "logs": {
          "type": "array",
          "maxItems": 10,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["text"],
            "properties": {
              "text": { "type": "string", "maxLength": 2000 },
              "source": { "type": "string", "maxLength": 80 }
            }
          }
        },
        "attachments": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "kind": { "type": "string", "enum": ["image", "video", "file", "other"] }
            }
          }
        }
      }
    },
    "actions_taken": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["at", "action"],
        "properties": {
          "at": { "type": "string", "format": "date-time" },
          "action": { "type": "string", "minLength": 3, "maxLength": 240 },
          "by": { "type": "string", "maxLength": 80 }
        }
      }
    },
    "next_steps": {
      "type": "array",
      "maxItems": 10,
      "items": { "type": "string", "minLength": 3, "maxLength": 200 }
    },
    "tags": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_\\-]{2,32}$"
      },
      "description": "Machine-friendly tags, e.g., 'db', 'network', 'patient_safety'."
    },
    "pii": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "contains_pii": {
          "type": "boolean",
          "description": "True if the report likely contains personally identifying info."
        },
        "redaction_applied": {
          "type": "boolean",
          "description": "True if redaction was applied before storing."
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "How confident the structuring/extraction is (0..1)."
    }
  }
}
